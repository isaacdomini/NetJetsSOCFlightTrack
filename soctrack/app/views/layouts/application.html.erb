<!DOCTYPE html>
<html>
  <head>
    <title>Soctrack</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/css/bootstrap-select.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'cable', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/dataTables.bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/js/bootstrap-select.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="">
        <div class="navbar-header">
          <a class="navbar-brand" href="">

            <%= image_tag "netjetsLogo.png", :style => "max-height: 100%;"%>
          </a>
        </div>
        <div class="collapse navbar-collapse" >
          <% if user_signed_in? %>
          <ul class="nav navbar-nav">
            <li><h4><%= @title || "SocTrack" %></h4></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <div href="" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
              <li><%= current_user.name %></li>
              <span class="fa fa-angle-down"></span>
            </div>
            <ul class="dropdown-menu pull-right">
              <li><a href="javascript:;">Role: <%= current_user.role %></a></li>
              <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
            </ul>
          </ul>
          <%end%>
        </div>
      </div>
    </nav>
    <% if flash[:alert] %>
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= flash[:alert] %>
    </div>
    <% end %>
    <% if flash[:notice] %>
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= flash[:notice] %>
    </div>        <% end %>
    <%= yield %>
  </body>
</html>
